# Server Configuration
PORT=4000

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/llmapp

# JWT Authentication
JWT_SECRET=change_me_to_a_secure_random_string
JWT_REFRESH_SECRET=change_me_to_another_secure_random_string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Model Configuration
MODEL_PROXY_URL=http://localai:8080
MODEL_API_KEY=

# Embeddings Provider (openai or huggingface)
EMBEDDINGS_PROVIDER=openai
OPENAI_API_KEY=your_openai_key_here
HF_API_KEY=

# File Uploads
UPLOAD_DIR=/data/uploads

# Rate Limiting (optional - defaults provided)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
MODEL_RATE_LIMIT_MAX=20
